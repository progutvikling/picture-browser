<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
  <modelVersion>4.0.0</modelVersion>
  <groupId>com.sandve.picturebrowser</groupId>
  <artifactId>picture-browser</artifactId>
  <version>1.0</version>
  <name>Picture Browser</name>
  <description>Picture Browser displays a slideshow of photos from twitter and instagram based on specified hashtags</description>
  <dependencies>
        <dependency>
            <groupId>junit</groupId>
            <artifactId>junit</artifactId>
            <version>4.11</version>
            <scope>test</scope>
        </dependency>
        <dependency>
            <groupId>com.google.code.gson</groupId>
            <artifactId>gson</artifactId>
            <version>2.2.4</version>
        </dependency>
        <dependency>
            <groupId>org.hamcrest</groupId>
            <artifactId>hamcrest-core</artifactId>
            <version>1.3</version>
        </dependency>
        <dependency>
			<groupId>mysql</groupId>
			<artifactId>mysql-connector-java</artifactId>
			<version>5.1.6</version>
		</dependency>
    </dependencies>
    <properties>
    	<project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
    	<maven.compiler.source>1.7</maven.compiler.source>
  		<maven.compiler.target>1.7</maven.compiler.target>
	</properties>
	<build>
        <plugins>
            <plugin>
                <groupId>com.googlecode.flyway</groupId>
                <artifactId>flyway-maven-plugin</artifactId>
                <version>2.2.1</version>
                <configuration>
                    <user>root</user>
                  	<password></password>
                  	<driver>com.mysql.jdbc.Driver</driver>
                  	<url>jdbc:mysql://localhost:3306/PictureBrowser</url>
                </configuration>
            </plugin>
        </plugins>
		<resources>
		  <resource>
			<directory>src/main/java</directory>
		  </resource>
		</resources>
		<testResources>
		  <testResource>
			<directory>src/main/java</directory>
		  </testResource>
		</testResources>
    </build>
</project>
